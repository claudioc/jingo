extends layout

include mixins/form

block content

  #content

    mixin warning()

    h2 #{title} for&nbsp;
      b.page-param #{term}

    dl.search-results
      each match in matches
        dt
          a(href="#{baseUrl}/wiki/#{match.pageName}?hl=#{encodeURIComponent(term)}") #{match.pageName}
          span.nl #{match.line}
        dd #{match.text}
