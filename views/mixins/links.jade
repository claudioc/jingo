mixin relHref(url, name)
  a(href="#{mountpath}" + url)&attributes(attributes)= name
    block

mixin asset(url)
  -
    var link = mountpath + url
    var match = /^.*?\.([a-zA-Z]+)$/.exec(url)
    var ext = match.length > 1 ? match[1] : ''
  if ext === 'css'
    link(rel="stylesheet", href=link)
  else if ext === 'js'
    script(src=link)
